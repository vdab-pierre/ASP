@model Videotheek.Models.LoginViewModel
@{
    ViewBag.Title = "Home Page";
}
@using (Html.BeginForm("Aanmelden", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        <div class="col-md-2 control-label">
            @Html.LabelFor(m => m.Familienaam)
        </div>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Familienaam, new { htmlAttributes = new { @class = "form-control inline-block" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 control-label">
            @Html.LabelFor(m => m.Postcode)
        </div>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Postcode, new { htmlAttributes = new { @class = "form-control inline-block" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input name="Aanmelden" type="submit" value="Aanmelden" class="btn btn-primary" />
        </div>
    </div>
}