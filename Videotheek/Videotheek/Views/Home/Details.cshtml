@model List<Videotheek.Models.Film>
@{
    ViewBag.Title = "Details";
}
<h1>@ViewBag.Naam</h1>
<table class="table">
    <thead>
        <tr>
            <th>Titel</th>
            <th>Prijs</th>
            <th>In Voorraad</th>
            <th>Huren</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var film in Model)
        {
            <tr>
                <td>@film.Titel</td>
                <td>@Html.DisplayFor(f=>film.Prijs)</td>
                <td>@film.InVoorraad</td>
                @if (film.InVoorraad > 0)
                {
                    <td><a href="@Url.Action("Huren", "Home", new { id=film.BandNr})">Huren</a></td>
                }
                else
                {
                    <td></td>
                }
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Verhuringen", "Home")"> Verder winkelen</a>
